<html>

<head>
  <title>Sudoku Game</title>   
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>


<body>

<h1 id="title">Life is too short for playing Sudoku</h1>

<br>



<div id="sudoku">
  <form action="/" method="post">
  <!-- one div for each row -->
    <% 3.times do |row| %>
      <div class='row'>
          <!-- we want to create separate div elements for boxes to style them using CSS -->
        <% 3.times do |box| %>
            <div class="box"  id='sudoku_table'>
           <!-- each box will have nine cells -->
           <% 3.times do |cell_row| %>
                <div class="cell-row">
               <% 3.times do |cell| %>
                    <div class="cell">

                      <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                      <% cell_value = cell_value(@current_solution[cell_index]) %>         
                      <% colour_class = colour_class(@check_solution, @puzzle[cell_index], @current_solution[cell_index], @solution[cell_index])  %>

            					<input type="text"  maxlength="1" autocomplete="off" value='<%= cell_value %>' name="cell[]" class="<%= colour_class %>" >

                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <p><p>
    <button class='submit_button'>Check solution</button>
  </form>
  <form action="/newpuzzle" method="post">
    <button class='submit_button'>New Puzzle</button>    
  </form>
  <form action="/solution" method="post"class='button'>
    <button class='submit_button'>Give me the sollution</button>    
  </form>
   <form action="/restart_puzzle" method="post"class='button'>
    <button class='submit_button'>Restart puzzle</button>    
  </form>

</div>
<br>


</body>
</html>







